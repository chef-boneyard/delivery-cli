#!/bin/bash
# Martin Emde
# https://github.com/martinemde/git-ssh-wrapper
unset SSH_AUTH_SOCK
ssh -o CheckHostIP=no \
    -o IdentitiesOnly=yes \
    -o LogLevel=INFO \
    -o StrictHostKeyChecking=no \
    -o PasswordAuthentication=no \
    -o UserKnownHostsFile=<%= node['delivery']['workspace']['cache'] %>/delivery-git-known-hosts \
    -o IdentityFile=<%= node['delivery']['workspace']['cache'] %>/github.pem \
    $*
